<div class="text-center">
  <h2>{{name}}</h2>
  <p>{{text}}</p>
  <p>Posted by {{user.name}} on {{format_date date_created}}</p>

  <form class="form new-comment-form">
      <div class="form-group">
        <label for="comment">Comment:</label>
        <textarea class="form-input" id="comment" name="comment"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Post comment</button>
      </div>
    </form>
  </div>

  {{#each comments as |comment| }}

  <div class="commentBox">
    <div class="commentContents">
    <h5 class="author">Comment posted by {{comment.user.name}} on {{format_date comment.date_created}}</h5>
    <p class="commentText"> {{comment.text}}</p>
    <i class="fa-solid fa-thumbs-up"></i> <h5>{{comment.green_thumb_counter}}</h5>
      
</div>
</div>
{{/each}}
</div>
